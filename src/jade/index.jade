            img(src='img/feature-3.jpg' width='230' height='200')
            h3.subtitle Custom#[br]Themes
      
    section#download
      .container
        h1.title Download
        
      ul.container
        li: a.button.bordered(href='https://github.com/Aluxian/Facebook-Messenger-Desktop/releases/download/v1.3.3/Messenger.dmg')
